<html>
<head>
    <title>CryptoPanic News</title>
    <link rel="stylesheet" href="/css/body.css">
</head>
<body">
    <%- include('./common/header/index') %>
    <div class="main-container mt-3">
        <h2>Crypto News</h2>
        <div class="row mt-3">
            <% newsData.forEach(newsItem => { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"><%= newsItem.title %></h5>
                            <p class="card-text"><strong>News source:</strong> <a target="_blank" href="https://<%= newsItem.source.domain %>"><%= newsItem.source.domain %></a></p>
                            <a href="<%= newsItem.url %>" class="btn">Go to the news article</a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
    <%- include('./common/footer/index') %>
</body>
</html>